<div class="container">
  <div class="row">
    <div class="col">
      <h1>Your rewards:</h1>
    </div>
  </div>

  <ul class="row rewards">
    <% @rewards.each do |reward| %>
      <li class="col-sm-12 col-md-6 col-lg-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title"><%= reward.offer.advertiser_name %> reward</h5>
            <%= number_to_currency(reward.value, unit: '$') %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>